{
  "manifest_version": 3,
  "name": "VARA - Fashion Intelligence",
  "version": "1.0.0",
  "description": "Save South Asian fashion from 100+ designers. Smart collections, cultural guidance, and price tracking.",
  "permissions": ["activeTab", "storage", "cookies"],
  "host_permissions": ["https://vara.com/*", "https://*.vara.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.azafashions.com/*", "*://*.kynah.com/*", "*://*.lashkaraa.com/*"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
